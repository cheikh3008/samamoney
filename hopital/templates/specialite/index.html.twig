{% extends 'base.html.twig' %}

{% block title %}Liste des Specialite {% endblock %}

{% block body %}
<div class="mx-auto" style="width: 650px;">
    <div class="starter-template">
        <div class="card border-secondary mb-3" style="text-align: center;" style="max-width: 40rem;">
            <div class="card-header" style="font-size: 2em;"> 
              Liste des specialites  <span style="float:right"><a href="{{ path("specialite_new") }} "  class="btn btn-success">Ajouter</a></span></div>
              <div class="card-body">
                <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Specialite</th>
                <th scope="col">Service</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.nomSpecialite }}</td>
                <td> {{  specialite.services }} </td>
                <td>
                    <a href="{{ path('specialite_show', {'id': specialite.id}) }} "  class="btn btn-success" >Afficher</a>
                    <a href="{{ path('specialite_edit', {'id': specialite.id}) }}"  class="btn btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">La table est vide.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
</div>   
</div>
   
{% endblock %}
