{% extends 'base.html.twig' %}

{% block title %}Medecin{% endblock %}

{% block body %}
   
    <div class="mx-auto" style="width: 600px;">
            <h1>Medecin</h1>
    <table class="table">
        <tbody>
            <tr>
                <th scope="col">Identifiant</th>
                <td>{{ medecin.id }}</td>
            </tr>
            <tr>
                <th scope="col">Matricule</th>
                <td>{{ medecin.matricule }}</td>
            </tr>
            <tr>
                <th scope="col">Prenom</th>
                <td>{{ medecin.prenom }}</td>
            </tr>
            <tr>
                <th scope="col">Nom</th>
                <td>{{ medecin.nom }}</td>
            </tr>
            <tr>
                <th scope="col">Telephone</th>
                <td>{{ medecin.telephone }}</td>
            </tr>
            <tr>
                <th scope="col">Date_naissance</th>
                <td>{{ medecin.dateNaissance ? medecin.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('medecin_index') }}" class="btn btn-secondary mb-2">Annuler</a>

    <a href="{{ path('medecin_edit', {'id': medecin.id}) }}" class="btn btn-success mb-2">Modifier</a>

    {{ include('medecin/_delete_form.html.twig') }}
</div>
{% endblock %}
