{% extends 'base.html.twig' %}

{% block title %}Liste des Medecin{% endblock %}

{% block body %}

    <div class="starter-template">
        <div class="card border-secondary mb-3" style="text-align: center;" style="max-width: 40rem;">
            <div class="card-header" style="font-size: 2em;"> 
              Liste des Medecins  <span style="float:right"><a href="{{ path("medecin_new") }} "  class="btn btn-success">Ajouter</a></span></div>
              <div class="card-body">
                <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Matricule</th>
                <th scope="col">Prenom</th>
                <th scope="col">Nom</th>
                <th scope="col">Telephone</th>
                <th scope="col">Date_naissance</th>
                <th scope="col">Service</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>    
                <td>{{ medecin.id }}</td>
                <td>{{ medecin.matricule }}</td>
                <td>{{ medecin.prenom }}</td>
                <td>{{ medecin.nom }}</td>
                <td>{{ medecin.telephone }}</td>
                <td>{{ medecin.dateNaissance ? medecin.dateNaissance|date('d-m-Y') : '' }}</td>
                <td>{{ medecin.services }}</td>
                <td>
                    <a href="{{ path('medecin_show', {'id': medecin.id}) }}" class="btn btn-success">Afficher</a>
                    <a href="{{ path('medecin_edit', {'id': medecin.id}) }}" class="btn btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">La table est vide .</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
</div>
</div>
{% endblock %}
